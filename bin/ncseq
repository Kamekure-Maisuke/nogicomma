#!/bin/bash

set -e
export LC_ALL=C

usage(){
  cat <<EOF
Usage: ${0##*/} [option]
Script description here.
Available options:
-h          show help
-v          show version
[number]    specify number
EOF
exit 1
}

case "${1:-default}" in
  (-v) echo "${0##*/} version 1.0.0";exit 0 ;;
  (-h) usage ;;
  (-*) usage ;;
  (default) echo "${0##*/}: no number"; exit 1 ;;
esac

[[ "$1" =~ ^[0-9]+$ && $1 -ge 1 ]] && {
for i in `seq $1`; do
  printf '\e[35mâŠ¿\e[0m\n'
done
} || echo "Specify a number greater than or equal to 1"; exit 1
